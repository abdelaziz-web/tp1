pipeline {
    agent any
    tools {
        maven 'maven'
        jdk 'jdk17'
    }

    stages {

        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }
        stage('Checkout') {
            steps {
                echo 'is new'
            }
        }
        stage('Display Message') {
            steps {
                echo 'Displaying message'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }
        stage('mvn clean package successful passed') {
            steps {
                bat 'mvn clean package'
            }
        }
    }
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
